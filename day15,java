import java.util.*;

class LongestSubstring {
    public static int lengthOfLongestSubstring(String s) {
        int n = s.length();
        int left = 0, maxLen = 0;
        HashSet<Character> set = new HashSet<>();

        for (int right = 0; right < n; right++) {
            // If duplicate found, shrink window from left
            while (set.contains(s.charAt(right))) {
                set.remove(s.charAt(left));
                left++;
            }
            set.add(s.charAt(right));
            maxLen = Math.max(maxLen, right - left + 1);
        }

        return maxLen;
    }
    public static void main(String[] args) {
        String s1 = "abcabcbb";
        String s2 = "bbbbb";
        String s3 = "pwwkew";
        String s4 = "abcdefgh";
        String s5 = "a";

        System.out.println(lengthOfLongestSubstring(s1)); // Output: 3
        System.out.println(lengthOfLongestSubstring(s2)); // Output: 1
        System.out.println(lengthOfLongestSubstring(s3)); // Output: 3
        System.out.println(lengthOfLongestSubstring(s4)); // Output: 8
        System.out.println(lengthOfLongestSubstring(s5)); // Output: 1
    }
}
